[commit]
    gpgsign = true
    verbose = true

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = {{#if (eq dotter.os "unix")}}~/.config{{else}}~/AppData/Roaming{{/if}}/git/allowed_signers

[tag]
    gpgsign = true
    sort = -version:refname
