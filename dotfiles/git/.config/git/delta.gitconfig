[core]
  pager = delta

[delta]
  dark = true
  navigate = true
  line-numbers = true
  hyperlinks = true
  features = decorations

[delta "decorations"]
  commit-style = raw
  file-style = omit
  hunk-header-style = file line-number syntax

[interactive]
  diffFilter = delta --color-only
